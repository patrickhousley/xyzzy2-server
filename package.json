{
  "name": "xyzzy2-server",
  "version": "1.0.0",
  "license": "CC-BY-NC-SA-2.0",
  "description": "Server back-end repository for the Xyzzy2 project.",
  "author": "Patrick Housley <patrick.f.housley@gmail.com>",
  "repository": {
    "url": "https://github.com/patrickhousley/xyzzy2-server",
    "type": "git"
  },
  "scripts": {
    "start": "node index.js",
    "prestart:prod": "rimraf ./dist && tsc",
    "start:prod": "node dist/server.js",
    "lint": "tslint --type-check --project tsconfig.spec.json './src/**/*.ts'",
    "pretest": "rimraf ./coverage",
    "test": "jest --coverage",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@nestjs/common": "*",
    "@nestjs/core": "*",
    "@nestjs/microservices": "*",
    "@nestjs/testing": "*",
    "@nestjs/websockets": "*",
    "body-parser": "^1.18.0",
    "compression": "^1.7.0",
    "express": "^4.15.4",
    "helmet": "^3.8.1",
    "pg": "^7.3.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.3",
    "typeorm": "0.1.0-alpha.38",
    "typescript": "^2.5.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/compression": "0.0.34",
    "@types/express": "^4.0.37",
    "@types/helmet": "0.0.36",
    "@types/node": "^8.0.28",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.1",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --single-quote --write",
      "tslint --type-check --project tsconfig.json",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/test-lib/**/*.{js,ts}",
      "!**/*.interface.ts",
      "!**/*.module.ts",
      "!src/migrations/**/*.ts"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "globals": {
      "tsConfigFile": "tsconfig.spec.json"
    },
    "transform": {
      "^.+\\.(tsx?|jsx?)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/src/test-lib/setup-jest.ts",
    "testRegex": "\\.spec\\.(ts|js)$"
  }
}
